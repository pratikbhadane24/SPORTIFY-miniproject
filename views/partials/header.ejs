    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">

</head>

<body>
    <!-- Navbar here -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="/"><img src="/img/logo.gif" height="30" width="90"></a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><span class="fa fa-home"></span> Home<span
                                class="sr-only"></span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about-us"><span class="fa fa-info"></span> About Us</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false"><span class="fa fa-bars"></span>
                            Categories
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item dropdown-color" href="#">Football</a>
                            <a class="dropdown-item dropdown-color" href="#">Cricket</a>
                            <a class="dropdown-item dropdown-color" href="#">Basketball</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><span class="fa fa-address-book"></span> Contact Us</a>
                    </li>
                </ul>
                <span class="navbar-text ms-auto p-3">
                    <a href="#" data-toggle="modal" data-target="#registerModal">
                        <span class="fa fa-user-plus"></span> Register</a>
                </span>
                <span class="navbar-text p-3">
                    <a href="#" data-toggle="modal" data-target="#loginModal">
                        <span class="fa fa-sign-in"></span> Login</a>
                </span>
            </div>
        </div>
    </nav>

    <!-- Login Modal -->
    <div id="loginModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg" role="content">
            <!-- LoginModal content-->
            <div class="modal-content">
                <div class="bg-dark text-light modal-header">
                    <h4 class="modal-title">Login </h4>
                    <button type="button" class="close modal-close-btn h3" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="col form-row">

                            <label class="sr-only" for="exampleInputEmail3">Email address</label>
                            <input type="email" class="form-control form-control-sm mr-1" id="exampleInputEmail3"
                                placeholder="Enter email">
                        </div><br>
                        <div class="col form-row">
                            <label class="sr-only" for="exampleInputPassword3">Password</label>
                            <input type="password" class="form-control form-control-sm mr-1" id="exampleInputPassword3"
                                placeholder="Password">
                        </div><br>
                        <div class="col-sm-auto">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox">
                                <label class="form-check-label"> Remember me
                                </label>
                            </div>
                        </div><br>
                        <div class="col form-row">
                            <button type="submit" class="btn btn-dark btn-sm ">Log in</button>
                            <button type="button" class="btn btn-secondary btn-sm ml-auto"
                                data-dismiss="modal">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Registration Modal -->
    <div id="registerModal" class="modal fade margin150" role="dialog">
        <div class="modal-dialog modal-lg" role="content">
            <!-- RegisterModal content-->
            <div class="modal-content">
                <div class="bg-dark text-light modal-header">
                    <h4 class="modal-title">Registration</h4>
                    <button type="button" class="close modal-close-btn h3" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row">
                            <div class="col">
                                <label class="sr-only" for="newFName">First Name</label>
                                <input type="fname" class="form-control form-control-sm mr-1" id="newFName"
                                    placeholder="First Name">
                            </div>
                            <div class="col-6"> <label class="sr-only" for="newLName">Last Name</label>
                                <input type="lname" class="form-control form-control-sm mr-1" id="newLName"
                                    placeholder="Last Name">
                            </div>
                        </div><br>
                        <div class="col form-row">
                            <div class="col">
                                <label class="sr-only" for="exampleInputEmail3">Email address</label>
                                <input type="email" class="form-control form-control-sm mr-1" id="exampleInputEmail3"
                                    placeholder="Enter email">
                            </div>
                        </div><br>
                        <div class="col form-row">
                            <div class="col">
                                <label class="sr-only" for="exampleInputPassword3">Password</label>
                                <input type="password" class="form-control form-control-sm mr-1"
                                    id="exampleInputPassword3" placeholder="Password">
                            </div>
                        </div><br>
                        <div class="col form-row">
                            <div class="col">
                                <button type="submit" class="btn btn-dark btn-sm ">Sign Up</button>
                                <button type="button" class="btn btn-secondary btn-sm ml-auto"
                                    data-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>